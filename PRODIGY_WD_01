  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      padding-top: 70px;
    }
    #mainNav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: linear-gradient(90deg, #007BFF, #00C6FF);
      z-index: 1000;
      transition: all .3s ease;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }
    #mainNav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
    }
    #mainNav li a {
      display: block;
      color: #fff;
      text-align: center;
      padding: 15px 20px;
      text-decoration: none;
      transition: all .3s ease;
    }
    #mainNav li a:hover {
      background: #fff;
      color: #007BFF;
    }
    #mainNav.scrolled {
      background: linear-gradient(90deg, #00C6FF, #007BFF);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
    #mainNav.scrolled li a {
      color: #f4f4f4;
    }
    #mainNav.scrolled li a:hover {
      background: #f4f4f4;
      color: #007BFF;
    }
    .section {
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      font-size: 2em;
    }
    .square {
      width: 150px;
      height: 150px;
      background: linear-gradient(135deg, #007BFF, #00C6FF);
      margin: 20px;
    }
    .circle {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      background: radial-gradient(circle at top left, #007BFF, #00C6FF);
      margin: 20px;
